# Server
NODE_ENV=development
PORT=3002

# Database (use same as spotli-mvp in development)
DATABASE_URL=postgresql://spotli:your-password@localhost:5432/spotli

# Redis
REDIS_URL=redis://localhost:6379

# Internal Authentication (shared with spotli-mvp backend)
INTERNAL_API_KEY=dev-internal-key-change-in-production

# LLM Providers (get your own keys)
# Tier 1: Google AI (Gemini) - Required for MVP
GOOGLE_AI_API_KEY=

# Tier 2: OpenAI - Optional
OPENAI_API_KEY=

# Tier 3: Anthropic (Claude) - Optional
ANTHROPIC_API_KEY=

# Rate Limiting
RATE_LIMIT_ORG_PER_MIN=100
RATE_LIMIT_USER_PER_MIN=20
